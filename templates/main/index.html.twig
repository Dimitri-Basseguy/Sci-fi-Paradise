{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <div data-bs-parallax-bg="true" class="paralax-home">
        <p class="text-center site-title">Sci-Fi Paradise</p>
        <h1 class="text-center" style="font-size: 22px;color: #ffffff;"><em>Votez pour vos livres de Science-Fiction préférés !</em></h1>
    </div>
    <div class="container text-center" id="TopBook">
        <h2 class="h2">Top livres du moment</h2>
    </div>
    <div id="row-column">
        <div class="container">
            <div class="row">
                <div class="col-md-3" style="margin-bottom: 1rem;">
                    <div class="card">
                        <div class="card-body text-center">
                            <h4 class="card-title">Dune</h4>
                            <h6 class="text-muted card-subtitle mb-2">Frank HERBERT</h6>
                            <div class="text-center card_cover"></div>
                            <div class="d-flex justify-content-center"><button class="btn btn-primary" data-toggle="tooltip" data-bs-tooltip="" data-bs-hover-animate="tada" type="button" title="Vote +" style="margin-right: 1rem;"><i class="far fa-arrow-alt-circle-up" style="font-size: 1.5rem;"></i></button>
                                <button
                                    class="btn btn-danger" data-toggle="tooltip" data-bs-tooltip="" data-bs-hover-animate="tada" type="button" title="Vote -"><i class="far fa-arrow-alt-circle-down" style="font-size: 1.5rem;"></i></button>
                            </div>
                            <p class="text-muted" style="margin-top: 0.5rem;margin-bottom: 0px;">Score&nbsp; : 125 pts.</p><a class="card-link" href="#">En savoir plus...</a></div>
                    </div>
                </div>
                <div class="col-md-3" style="margin-bottom: 1rem;"></div>
                <div class="col-md-3" style="margin-bottom: 1rem;"></div>
                <div class="col-md-3" style="margin-bottom: 1rem;"></div>
            </div>
        </div>
    </div>
{% endblock %}
