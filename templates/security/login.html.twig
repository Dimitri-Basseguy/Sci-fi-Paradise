{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>
    {{ form_start(form) }}
    {{ form_row(form.firstName, {'label': 'Prénom', 'attr': {'placeholder': 'Votre prénom'}}) }}
    {{ form_row(form.lastName, {'label': 'Nom', 'attr': {'placeholder': 'Votre nom'}}) }}
    {{ form_row(form.email, {'attr': {'placeholder': 'Adresse email...'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation du MDP', 'attr': {'placeholder': 'Répétez votre mot de passe'}}) }}
    <button type="submit">Inscription !</button>
    {{ form_end(form) }}
{% endblock %}