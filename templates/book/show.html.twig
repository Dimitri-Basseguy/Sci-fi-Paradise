{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ book.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ book.date }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ book.summary }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ book.score }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ book.style }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    {% if app.user %}<a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}{% endif %}
</div>
{% endblock %}
